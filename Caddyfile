{
	storage file_system /data/
	debug
	pki {
		ca hayden {
			name "Hayden"
		}
	}
}

api.dev.hayden.moe {
	tls {
		issuer internal {
			ca hayden
		}
	}

	reverse_proxy http://host.docker.internal:8080
}

cookware.dev.hayden.moe {
	tls {
		issuer internal {
			ca hayden
		}
	}

	reverse_proxy http://host.docker.internal:5173

  handle_path /xrpc/* {
    rewrite * /xrpc{uri}
    reverse_proxy http://host.docker.internal:8080
  }
  handle_path /oauth/* {
    rewrite * /oauth{uri}
    reverse_proxy http://host.docker.internal:8080
  }
}

http://*.trycloudflare.com {
	reverse_proxy http://host.docker.internal:5173

  handle_path /xrpc/* {
    rewrite * /xrpc{uri}
    reverse_proxy http://host.docker.internal:8080
  }
  handle_path /oauth/* {
    rewrite * /oauth{uri}
    reverse_proxy http://host.docker.internal:8080
  }
}

acme.dev.hayden.moe {
	tls {
		issuer internal {
			ca hayden
		}
	}
	acme_server {
		ca hayden
	}
}

turso.dev.hayden.moe {
	tls {
		issuer internal {
			ca hayden
		}
	}

	reverse_proxy http://libsql:8080
}
